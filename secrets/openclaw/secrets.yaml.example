# Example secrets file for OpenClaw
# Copy this to secrets.yaml and encrypt with: sops -e secrets.yaml.example > secrets.yaml
#
# To create encrypted secrets:
# 1. Generate an age key: age-keygen -o /var/lib/sops-nix/keys.txt
# 2. Add the public key to .sops.yaml
# 3. Create this file with real values
# 4. Encrypt: sops -e secrets.yaml.example > secrets.yaml

# Anthropic API key (shared between instances, or use per-instance keys)
anthropic_api_key: sk-ant-api03-XXXXXXXX

# Instance-specific authentication tokens
# Used for WebChat authentication
alpha_instance_token: alpha-secret-token-XXXXXXXX
beta_instance_token: beta-secret-token-XXXXXXXX

# Inter-instance communication keys (for signed RPC messages)
# Generate with: openssl rand -base64 32
alpha_bridge_signing_key: base64-encoded-signing-key-alpha
beta_bridge_signing_key: base64-encoded-signing-key-beta

# Shared bridge secret for mutual authentication
bridge_shared_secret: shared-bridge-authentication-secret
