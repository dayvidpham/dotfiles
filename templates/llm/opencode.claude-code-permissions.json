{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": {
      "*": "allow",
      ".beads/**": "deny",
      ".beads/config.yaml": "ask",
      ".aura/claude-backup/**": "deny",
      "~/codebases/dayvidpham/aura-scripts/launch-parallel.py": "ask"
    },
    "read": {
      "*": "allow",
      ".claude/commands/*": "allow",
      "/tmp/claude*": "allow",
      "*.env": "deny",
      "*.env.*": "deny"
    },
    "bash": {
      "*": "ask",
      "python3 ~/codebases/dayvidpham/aura-scripts/launch-parallel.py*": "allow",
      "bd": "allow",
      "bd *": "allow",
      "npm test*": "allow",
      "npm run test*": "allow",
      "npm run typecheck*": "allow",
      "npm run lint*": "allow",
      "npm run build*": "allow",
      "npx vitest*": "allow",
      "pnpm test*": "allow",
      "yarn test*": "allow",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git add*": "allow",
      "git commit*": "deny",
      "git agent-commit*": "allow",
      "git push": "allow",
      "tail*": "allow",
      "tree*": "allow",
      "bd burn*": "deny",
      "bd reset*": "deny",
      "bd compact*": "deny",
      "bd edit*": "deny"
    },
    "external_directory": "deny",
    "doom_loop": "ask"
  }
}
